{
  "name": "darna-api",
  "version": "1.0.0",
  "description": "Darna - Plateforme intelligente d'annonces, de chat et d'estimation immobili√®re",
  "main": "dist/src/app.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node dist/src/app.js",
    "dev": "ts-node src/app.ts",
    "dev:watch": "nodemon --exec ts-node src/app.ts",
    "dev:debug": "nodemon --exec ts-node --inspect src/app.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint src/ --ext .ts,.js",
    "lint:fix": "eslint src/ --ext .ts,.js --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "build:clean": "rm -rf dist && npm run build",
    "clean": "rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean && npm install",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop darna-api",
    "pm2:restart": "pm2 restart darna-api",
    "pm2:delete": "pm2 delete darna-api",
    "pm2:logs": "pm2 logs darna-api",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker build -t darna-api .",
    "docker:run": "docker run -p 3000:3000 darna-api",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "db:seed": "node scripts/seed.js",
    "db:migrate": "node scripts/migrate.js",
    "db:reset": "node scripts/reset.js",
    "db:test": "node scripts/test-mongodb.js",
    "logs": "tail -f logs/app.log",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yassir-Zbida/Darna-Api.git"
  },
  "keywords": [
    "real-estate",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "websocket",
    "chat",
    "estimation"
  ],
  "author": "Yassir Zbida, Abderrahmane AHLALLAY",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Yassir-Zbida/Darna-Api/issues"
  },
  "homepage": "https://github.com/Yassir-Zbida/Darna-Api#readme",
  "dependencies": {
    "@types/minio": "^7.1.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.6",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.13",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
