{
  "name": "darna-api",
  "version": "1.0.0",
  "description": "Darna - Plateforme intelligente d'annonces, de chat et d'estimation immobili√®re",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "dev:debug": "nodemon --inspect src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "build": "echo 'No build step required for Node.js'",
    "clean": "rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean && npm install",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop darna-api",
    "pm2:restart": "pm2 restart darna-api",
    "pm2:delete": "pm2 delete darna-api",
    "pm2:logs": "pm2 logs darna-api",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker build -t darna-api .",
    "docker:run": "docker run -p 3000:3000 darna-api",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "db:seed": "node scripts/seed.js",
    "db:migrate": "node scripts/migrate.js",
    "db:reset": "node scripts/reset.js",
    "logs": "tail -f logs/app.log",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "precommit": "npm run lint && npm run test",
    "prepush": "npm run test:coverage && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yassir-Zbida/Darna-Api.git"
  },
  "keywords": [
    "real-estate",
    "api",
    "nodejs",
    "express",
    "mongodb",
    "websocket",
    "chat",
    "estimation"
  ],
  "author": "Zakaria Ziane",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Yassir-Zbida/Darna-Api/issues"
  },
  "homepage": "https://github.com/Yassir-Zbida/Darna-Api#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.13",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
